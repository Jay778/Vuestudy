
.card {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border: 1rpx solid #eee;
	width: 95%;
	height: 100rpx;
	margin-bottom: 8rpx;
	/* 垂直方向居中 */
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	/* 水平方向居中 */
	/* justify-content: center; */
	padding-left: 10rpx;
	padding-right: 10rpx;
}
